<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp">


    <TextView
        android:id="@+id/tp_group_id"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="#ff33ff"/>

    <TextView
        android:id="@+id/tp_group_name"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_toRightOf="@id/tp_group_id"
        android:layout_marginLeft="70dp"
        android:background="#f4ff44"/>

    <TextView
        android:id="@+id/tp_user_list"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@id/tp_group_name"
        android:background="#ff0000"/>





</RelativeLayout>