<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Friends">

    <SearchView
        android:id="@+id/search_friends_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:searchHintIcon="@drawable/icons8_search" />

    <ListView
        android:id="@+id/list_friends_view"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/search_friends_view"
        android:layout_marginBottom="30dp"
        android:paddingLeft="20dp" />


    <LinearLayout
        android:id="@+id/ly_friends_1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_below="@id/list_friends_view"
        >

        <RelativeLayout
            android:id="@+id/rl_friends_1"
            android:layout_width="50dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/FriendsView_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/icons8_male_user"
                android:layout_marginLeft="20dp"/>

        </RelativeLayout>


        <Button
            android:id="@+id/friends_button_3"
            android:layout_width="299dp"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:background="@null"
            android:text="Thanos"
            android:textAllCaps="false"
            android:textStyle="italic" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ly_friends_2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_below="@id/ly_friends_1">
        <RelativeLayout
            android:id="@+id/rl_friends_2"
            android:layout_width="50dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/FriendsView_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/icons8_firned_male"
                android:layout_marginLeft="20dp"/>

        </RelativeLayout>

        <Button
            android:id="@+id/friends_button_4"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:text="Captain America"
            android:textStyle="italic"
            android:background="@null"
            android:textAllCaps="false"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_friends_3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_below="@id/ly_friends_2">
        <RelativeLayout
            android:id="@+id/rl_friends_3"
            android:layout_width="50dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/FriendsView_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/icons8_male_user"
                android:layout_marginLeft="20dp"/>

        </RelativeLayout>

        <Button
            android:id="@+id/friends_button_5"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:text="Iron Man"
            android:textStyle="italic"
            android:background="@null"
            android:textAllCaps="false"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="#EEEEEE">

    </LinearLayout>

    <Button
        android:id="@+id/friends_button_6"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@null"
        android:drawableTop="@drawable/icons8_fenzu"
        android:text="Group"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/friends_button_7"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@id/friends_button_6"
        android:background="@null"
        android:drawableTop="@drawable/icons8_friends"
        android:text="Friends"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textStyle="bold"
        android:enabled="false"/>

    <Button
        android:id="@+id/friends_button_8"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="24dp"
        android:layout_toRightOf="@id/friends_button_7"
        android:background="@null"
        android:drawableTop="@drawable/icons8_history"
        android:text="History"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textStyle="bold" />


</RelativeLayout>