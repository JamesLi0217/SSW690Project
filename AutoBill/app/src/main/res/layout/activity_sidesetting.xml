<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/userbj"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#F9F4F4"/>

    <TextView
        android:id="@+id/userphoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/usericon"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="140dp"/>

    <TextView
        android:id="@+id/username3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:layout_below="@id/userphoto"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/userid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID: xxxxxx"
        android:layout_below="@id/username3"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="-10dp"
        android:textSize="30sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/balance"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:drawableLeft="@drawable/money"
        android:layout_below="@id/userbj"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:drawablePadding="5dp"
        android:text="Balance"
        android:textSize="25sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/upmiddle1"
        android:layout_width="370dp"
        android:layout_height="3dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/balance"
        android:background="#F9F4F4"/>

    <Button
        android:id="@+id/ep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/edit"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:drawablePadding="5dp"
        android:text="Edit profile"
        android:textSize="25sp"
        android:textColor="#000000"
        android:textAllCaps="false"
        android:gravity="center_vertical"
        android:background="@null"
        android:layout_below="@id/upmiddle1"
        android:drawableRight="@drawable/icon_tback"
        android:paddingRight="20dp"/>

    <TextView
        android:id="@+id/upmiddle2"
        android:layout_width="370dp"
        android:layout_height="3dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/ep"
        android:background="#F9F4F4"/>

    <Button
        android:id="@+id/pm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/payment"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:drawablePadding="5dp"
        android:text="Pay methods"
        android:textSize="25sp"
        android:textColor="#000000"
        android:textAllCaps="false"
        android:gravity="center_vertical"
        android:background="@null"
        android:layout_below="@id/upmiddle2"
        android:drawableRight="@drawable/icon_tback"
        android:paddingRight="20dp"/>

    <TextView
        android:id="@+id/upmiddle3"
        android:layout_width="370dp"
        android:layout_height="3dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/pm"
        android:background="#F9F4F4"/>

    <Button
        android:id="@+id/s"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/settings"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:drawablePadding="5dp"
        android:text="Settings"
        android:textAllCaps="false"
        android:gravity="center_vertical"
        android:textSize="30sp"
        android:textColor="#000000"
        android:layout_below="@id/upmiddle3"
        android:drawableRight="@drawable/icon_tback"
        android:paddingRight="20dp"
        android:background="@null"/>

    <TextView
        android:id="@+id/upmiddle4"
        android:layout_width="370dp"
        android:layout_height="3dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/s"
        android:background="#F9F4F4"/>

    <TextView
        android:id="@+id/lo1"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Log out"
        android:maxLines="1"
        android:textSize="20sp"
        android:textColor="#000000"
        android:drawableRight="@drawable/logout"
        android:layout_below="@id/upmiddle4"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:paddingLeft="3dp"/>

    <TextView
        android:id="@+id/v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lo1"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="10dp"
        android:text="Version: 2.0"
        android:textColor="#000000"
        android:textSize="18sp"/>

</RelativeLayout>