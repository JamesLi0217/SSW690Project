<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_items"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

<!--    <ImageView-->
<!--        android:id="@+id/group_iv"-->
<!--        android:layout_width="80dp"-->
<!--        android:layout_height="80dp"-->
<!--        android:background="#FF3300"/>-->

    <TextView
        android:id="@+id/group_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/group_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_toRightOf="@+id/group_iv"
        android:textColor="#000000"
        android:textSize="30sp"
        android:gravity="center" />

    <TextView
        android:id="@+id/group_user_title"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Users:"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_below="@id/group_name"
        android:layout_toRightOf="@id/group_iv"
        android:gravity="center"/>

    <TextView
        android:id="@+id/group_user_list"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_toRightOf="@+id/group_user_title"
        android:layout_below="@+id/group_name"
        android:textSize="20sp"
        android:textColor="#000000"
        android:paddingLeft="30dp"
        android:gravity="center_vertical"/>

    <ImageView
        android:layout_below="@id/group_user_list"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#EEEEEE"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="90dp"/>


</RelativeLayout>