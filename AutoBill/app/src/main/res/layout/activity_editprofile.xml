<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="Profile"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="30sp"
        android:background="#F9F4F4"/>

    <TextView
        android:id="@+id/back1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_back"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"/>


    <TextView
        android:id="@+id/photo"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@+id/profile"
        android:text="Photo"
        android:paddingTop="55dp"
        android:paddingLeft="20dp"
        android:textSize="30sp"
        android:background="#FFFFFF"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/userphoto1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/usericon"
        android:layout_below="@id/profile"
        android:paddingTop="15dp"
        android:paddingLeft="143dp"/>

    <TextView
        android:id="@+id/cp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change"
        android:textSize="25sp"
        android:textColor="#5400FF"
        android:layout_below="@id/profile"
        android:paddingTop="65dp"
        android:paddingLeft="310dp"/>


    <TextView
        android:id="@+id/pmiddle1"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/photo"
        android:background="#F9F4F4"/>

    <TextView
        android:id="@+id/pid"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@+id/pmiddle1"
        android:text="ID"
        android:textSize="35sp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:background="#FFFFFF"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/pid1"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@+id/pmiddle1"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="70dp"
        android:text="XXXXXX"
        android:textSize="25sp"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:background="#FFFFFF"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/pmiddle2"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/pid"
        android:background="#F9F4F4"/>

    <TextView
        android:id="@+id/un"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@+id/pmiddle2"
        android:text="Name"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:textSize="30sp"
        android:background="#FFFFFF"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/pun"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@+id/pmiddle2"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="125dp"
        android:text="Username"
        android:textSize="25sp"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:background="#FFFFFF"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/cn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change"
        android:textSize="25sp"
        android:textColor="#5400FF"
        android:layout_below="@id/pmiddle2"
        android:paddingTop="65dp"
        android:paddingLeft="310dp"/>

</RelativeLayout>