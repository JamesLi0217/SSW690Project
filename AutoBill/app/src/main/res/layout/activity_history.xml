<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".History">
    <TextView
        android:id="@+id/H_text_view1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:layout_margin="20dp"
        android:text="History"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#22B4D8"/>

    <TextView
        android:id="@+id/bill_1"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_below="@id/H_text_view1"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Coke"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="italic" />

    <View
        android:id="@+id/split_line_1"
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:layout_below="@id/bill_1"
        android:layout_marginTop="2dp"
        android:background="#DDDDDD"  />



    <ImageView
        android:id="@+id/imageView_4"
        android:layout_width="30dp"
        android:layout_height="45dp"
        android:layout_below="@id/H_text_view1"
        android:layout_toRightOf="@id/bill_1"
        android:src="@drawable/icons8_dollar" />

    <TextView
        android:id="@+id/bill_1_1"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_below="@id/H_text_view1"
        android:layout_toRightOf="@id/imageView_4"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="44.00"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/bill_1_2"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_below="@id/H_text_view1"
        android:layout_toRightOf="@id/bill_1_1"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Date: 9/10/2019"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="italic" />

    <View
        android:id="@+id/split_line_2"
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:layout_below="@id/bill_2"
        android:layout_marginTop="2dp"
        android:background="#DDDDDD"  />

    <TextView
        android:id="@+id/bill_2"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_below="@id/bill_1_1"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Hotel"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="italic" />


    <ImageView
        android:id="@+id/imageView_5"
        android:layout_width="30dp"
        android:layout_height="45dp"
        android:layout_below="@id/bill_1_1"
        android:layout_toRightOf="@id/bill_2"
        android:src="@drawable/icons8_dollar" />

    <TextView
        android:id="@+id/bill_2_2"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_below="@id/bill_1_1"
        android:layout_toRightOf="@id/imageView_5"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="234.00"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="italic" />
    <TextView
        android:id="@+id/bill_1_3"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_below="@id/bill_1_1"
        android:layout_toRightOf="@id/bill_2_2"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Date: 9/12/2019"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/bill_3"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_below="@id/bill_2"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Snack"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="italic" />


    <ImageView
        android:id="@+id/imageView_6"
        android:layout_width="30dp"
        android:layout_height="45dp"
        android:layout_below="@id/bill_2"
        android:layout_toRightOf="@id/bill_3"
        android:src="@drawable/icons8_dollar" />

    <TextView
        android:id="@+id/bill_3_2"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_below="@id/bill_2"
        android:layout_toRightOf="@id/imageView_6"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="88.60"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/bill_3_3"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_below="@id/bill_2"
        android:layout_toRightOf="@id/bill_3_2"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Date: 9/13/2019"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="italic" />

    <View
        android:id="@+id/split_line_3"
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:layout_below="@id/bill_3"
        android:layout_marginTop="2dp"
        android:background="#DDDDDD"  />

    <RelativeLayout
        android:id="@id/ly_1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/H_text_view_2"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="Total :"
            android:textColor="#3F51B5"
            android:textStyle="bold"
            android:textSize="20sp"
            android:paddingTop="30dp"
            android:paddingLeft="20dp"/>

        <TextView
            android:id="@+id/text_view_3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="-300dp"
            android:layout_toRightOf="@id/H_text_view_2"
            android:paddingTop="30dp"
            android:text="366.60"
            android:textColor="#3F51B5"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>


</RelativeLayout>