<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="Settings"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="30sp"
        android:background="#F9F4F4"/>

    <TextView
        android:id="@+id/sback1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_back"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"/>


    <TextView
        android:id="@+id/account"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@+id/settings"
        android:text="Account"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:textSize="30sp"
        android:background="#FFFFFF"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/spoint1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_tback"
        android:layout_below="@id/settings"
        android:paddingLeft="380dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/smiddle1"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@+id/account"
        android:background="#F9F4F4"/>

    <TextView
        android:id="@+id/general1"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@+id/smiddle1"
        android:text="General"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:textSize="30sp"
        android:background="#FFFFFF"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/spoint2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_tback"
        android:layout_below="@id/smiddle1"
        android:paddingLeft="380dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/smiddle2"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@+id/general1"
        android:background="#F9F4F4"/>

    <TextView
        android:id="@+id/help"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@+id/smiddle2"
        android:text="Help"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:textSize="30sp"
        android:background="#FFFFFF"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/spoint3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_tback"
        android:layout_below="@id/general1"
        android:paddingLeft="380dp"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/fb"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Feedback"
        android:textSize="30sp"
        android:layout_below="@id/help"
        android:background="#FFFFFF"
        android:textColor="#000000"
        android:paddingLeft="20dp"
        android:layout_marginTop="-10dp"/>

    <TextView
        android:id="@+id/spoint4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_tback"
        android:layout_below="@id/help"
        android:paddingLeft="380dp" />

    <TextView
        android:id="@+id/smiddle3"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@+id/fb"
        android:background="#F9F4F4"/>

    <TextView
        android:id="@+id/lo"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@+id/smiddle3"
        android:text="Log Out"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:textSize="30sp"
        android:background="#FFFFFF"
        android:textColor="#4B00FF"/>

</RelativeLayout>