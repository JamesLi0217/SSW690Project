<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".createbillActivity"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/create_linear_1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingTop="20dp">
        <TextView
            android:id="@+id/create_bill_1"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:text="Group Name"
            android:textSize="25sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:gravity="center_horizontal"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_2"
        android:layout_height="30dp"
        android:layout_width="match_parent"
        android:layout_below="@id/create_linear_1"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/create_bill_2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/icons8_dollar"
            android:paddingTop="2dp"/>

        <TextView
            android:id="@+id/total"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="Total :"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />
    </LinearLayout>

    <Button
        android:id="@+id/checkout"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/create_linear_1"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:text="Check Out"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <Button
        android:id="@+id/add"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/checkout"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:text="Add things"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:gravity="center" />
    <View
        android:id="@+id/split_line"
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:layout_below="@id/add"
        android:layout_marginTop="10dp"
        android:background="#000000"  />

    <LinearLayout
        android:id="@+id/linear_4"
        android:layout_height="70dp"
        android:layout_width="match_parent"
        android:layout_below="@id/split_line">
        <TextView
            android:id="@+id/present_bill"
            android:layout_height="70dp"
            android:layout_width="match_parent"
            android:layout_below="@id/split_line"
            android:layout_marginTop="5dp"
            android:text="Present Bill"
            android:textSize="15dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:gravity="left"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            />
    </LinearLayout>



    <TextView
        android:id="@+id/bill_1"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_below="@id/linear_4"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Coke"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="italic" />


    <ImageView
        android:id="@+id/imageView_4"
        android:layout_width="30dp"
        android:layout_height="45dp"
        android:layout_below="@id/linear_4"
        android:layout_toRightOf="@id/bill_1"
        android:src="@drawable/icons8_dollar" />

    <TextView
        android:id="@+id/bill_1_1"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_below="@id/linear_4"
        android:layout_toRightOf="@id/imageView_4"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="44.00"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="italic" />


    <TextView
        android:id="@+id/bill_1_2"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_below="@id/linear_4"
        android:layout_toRightOf="@id/bill_1_1"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Date: 9/10/2019"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/bill_2"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_below="@id/bill_1_1"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Hotel"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="italic" />


    <ImageView
        android:id="@+id/imageView_5"
        android:layout_width="30dp"
        android:layout_height="45dp"
        android:layout_below="@id/bill_1_1"
        android:layout_toRightOf="@id/bill_2"
        android:src="@drawable/icons8_dollar" />

    <TextView
        android:id="@+id/bill_2_2"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_below="@id/bill_1_1"
        android:layout_toRightOf="@id/imageView_5"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="234.00"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="italic" />
    <TextView
        android:id="@+id/bill_1_3"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_below="@id/bill_1_1"
        android:layout_toRightOf="@id/bill_2_2"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Date: 9/12/2019"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/bill_3"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_below="@id/bill_2"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Snack"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="italic" />


    <ImageView
        android:id="@+id/imageView_6"
        android:layout_width="30dp"
        android:layout_height="45dp"
        android:layout_below="@id/bill_2"
        android:layout_toRightOf="@id/bill_3"
        android:src="@drawable/icons8_dollar" />

    <TextView
        android:id="@+id/bill_3_2"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_below="@id/bill_2"
        android:layout_toRightOf="@id/imageView_6"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="88.60"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="italic" />
    <TextView
        android:id="@+id/bill_3_3"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_below="@id/bill_2"
        android:layout_toRightOf="@id/bill_3_2"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Date: 9/13/2019"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="italic" />




</RelativeLayout>