<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BillTestActivity">

    <TextView
        android:id="@+id/bt_total"
        android:layout_width="215dp"
        android:layout_height="50dp"
        android:text="Total:"
        android:paddingLeft="20dp"
        android:textSize="40sp"
        android:textColor="#000000"
        android:background="#EEEEEE"/>

    <TextView
        android:id="@+id/bt_money"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/bt_total"
        android:background="#EEEEFF"/>

    <Button
        android:id="@+id/bt_checkout"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/bt_money"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:text="Check Out"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <Button
        android:id="@+id/bt_add"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/bt_checkout"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:text="Add things"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:gravity="center" />

    <ImageView
        android:id="@+id/bt_middle"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/bt_add"
        android:background="#EEEEEE"
        android:layout_marginTop="2dp"/>
    <TextView
        android:id="@+id/test_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_middle"
        android:text="Itemlist:"
        android:textSize="30sp"
        android:textColor="#000000"
        android:paddingLeft="20dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bt_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/test_title">

    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>